<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#39c0e5"
    android:orientation="vertical"
    tools:context=".Simon">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25mm"
        android:layout_marginTop="20pt"
        android:layout_marginBottom="10pt"
        android:background="#000000"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10mm"
            android:layout_marginTop="20pt"
            android:layout_marginBottom="20dp"
            android:background="#000000"
            android:text="Jugemos"
            android:textAlignment="center"
            android:textSize="10mm"
            android:fontFamily="@font/cuadritos"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20mm"
        android:orientation="horizontal">

        <TextView
            android:layout_width="216dp"
            android:layout_height="20mm"
            android:fontFamily="@font/caras1"
            android:text="\t\t\t\t\t\t\t\t\t\tO"
            android:textColor="#000000"
            android:textSize="20mm" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="13mm"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/iconos2"
            android:text="Á"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="15mm" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#e5396a">

            <TextView
                android:layout_width="205dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="40dp"
                android:text="Fácil"
                android:fontFamily="@font/normal"
                android:textSize="50dp"
                android:textAlignment="center"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/facil"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/redondo"
                android:fontFamily="@font/estrellas"
                android:text="B"
                android:textSize="50dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="#c0e539">

            <TextView
                android:layout_width="205dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="40dp"
                android:text="Medio"
                android:fontFamily="@font/normal"
                android:textSize="50dp"
                android:textAlignment="center"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/medio"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/redondo"
                android:fontFamily="@font/estrellas"
                android:text="BB"
                android:textSize="30dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>