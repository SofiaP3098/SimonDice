<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#39c0e5"
    tools:context=".presentacion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:background="#000000"
            android:text="Tecnologias\n\nde la\n\nInformacion"
            android:textAlignment="center"
            android:textSize="40dp"
            android:fontFamily="@font/cuadritos"
            android:textColor="#FFFFFF"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:text="Aplicación:"
            android:textAlignment="textStart"
            android:textSize="25dp"
            android:fontFamily="@font/normal"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:text="Simón Dice"
            android:textAlignment="textEnd"
            android:textSize="25dp"
            android:fontFamily="@font/normal"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:layout_marginRight="10dp"
            android:layout_weight="3"
            android:text="Tamo Vargas, Gerardo\nPeñares Pillaca, Sofia"
            android:textAlignment="textEnd"
            android:textSize="25dp"
            android:fontFamily="@font/normal"
            android:textColor="#000000"
            />

    </LinearLayout>



</LinearLayout>