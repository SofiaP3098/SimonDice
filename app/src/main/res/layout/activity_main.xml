<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#39c0e5"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#e5396a">

        <TextView
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:text="¡Toma una foto!"
            android:fontFamily="@font/normal"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/capture_image_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/redondo"
            android:fontFamily="@font/camara"
            android:text=")"
            android:textSize="50dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#c0e539">

        <TextView
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:text="¡Descubre que dice tu imagen!"
            android:fontFamily="@font/normal"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/detect_text_image_btn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/redondo"
            android:fontFamily="@font/iconos3"
            android:text="~"
            android:textSize="45dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_display"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#83d8ef"
        android:text="Aquí aparecerá el texto"
        android:fontFamily="@font/normal"
        android:textAlignment="center"
        android:textSize="22dp"
        android:maxLines="5"
        android:layout_margin="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#c0e539">

        <TextView
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:text="¡Escucha lo que dice tu imagen!"
            android:fontFamily="@font/normal"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/hablar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/redondo"
            android:fontFamily="@font/iconos3"
            android:text="È"
            android:textSize="40dp" />
    </LinearLayout>

</LinearLayout>