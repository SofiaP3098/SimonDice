<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#39c0e5"
    tools:context=".Inicio">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25mm"
        android:layout_marginTop="20pt"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:background="#000000"
        android:text="Simon\nDice"
        android:textAlignment="center"
        android:textSize="13mm"
        android:fontFamily="@font/cuadritos"
        android:textColor="#FFFFFF"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="12mm"
        android:orientation="horizontal">

        <TextView
            android:layout_width="214dp"
            android:layout_height="12mm"
            android:layout_gravity="center"
            android:fontFamily="@font/caras1"
            android:text="\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\tO"
            android:textColor="#000000"
            android:textSize="12mm" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="8mm"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/iconos2"
            android:text="Á"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="10mm" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#e5396a">

            <TextView
                android:layout_width="205dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="40dp"
                android:text="Refuerza tu habilidad de Orientacion"
                android:fontFamily="@font/normal"
                android:textSize="23dp"
                android:textAlignment="center"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/orientacion"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/redondo"
                android:fontFamily="@font/caras1"
                android:text="J"
                android:textSize="60dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#c0e539">

            <TextView
                android:layout_width="205dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="40dp"
                android:text="Refuerza tu conocimiento del abecedario"
                android:fontFamily="@font/normal"
                android:textSize="23dp"
                android:textAlignment="center"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/abecedario"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/redondo"
                android:fontFamily="@font/caras1"
                android:text="w"
                android:textSize="60dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#5e39e5">

            <TextView
                android:layout_width="205dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="40dp"
                android:text="Busca y encuentra a muchos animales"
                android:fontFamily="@font/normal"
                android:textSize="23dp"
                android:textAlignment="center"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/animal"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/redondo"
                android:fontFamily="@font/caras1"
                android:text="c"
                android:textSize="60dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>